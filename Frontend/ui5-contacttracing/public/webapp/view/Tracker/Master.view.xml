<mvc:View
    controllerName="semiodesk.ui5.covidtracker.controller.Tracker.Master"
	displayBlock="true"
	height="100%"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage id="dynamicPageId"
				   toggleHeaderOnTitleClick="false"
				   preserveHeaderStateOnScroll="true">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="COVID Tracker Users ({path: 'Users>/', formatter: '.getUserCount'})"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader pinnable="false">
				<layout:HorizontalLayout allowWrapping="true">
					<layout:VerticalLayout class="sapUiMediumMarginEnd">
						<ObjectAttribute title="COVID Risk Filter" text=""/>
						<ComboBox
							items="{
								path: 'CovidFilter>/',
								sorter: { path: 'ID' }
							}"
							selectedKey="0"
							selectionChange=".onFilterSelectionChange(${$source>/selectedKey})">
							<core:Item key="{CovidFilter>ID}" text="{CovidFilter>RiskLevel}" />
						</ComboBox>
					</layout:VerticalLayout>
				</layout:HorizontalLayout>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<Table id="productsTable"
				   inset="false"
				   items="{
                       path: 'Users>/',
                       sorter: {
                           path: 'ID'
                       }
                    }"
				   class="sapFDynamicPageAlignContent"
				   width="auto">
				<!-- <headerToolbar>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<SearchField search="onSearch" width="17.5rem"/>
						<OverflowToolbarButton icon="sap-icon://add" type="Transparent"/>
						<OverflowToolbarButton icon="sap-icon://sort" type="Transparent"/>
					</OverflowToolbar>
				</headerToolbar> -->
				<columns>
					<Column width="20em">
						<Text text="User ID" />
					</Column>
					<Column
						minScreenWidth="Desktop"
						demandPopin="true">
						<Text text="COVID Health Status" />
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onListItemPress">
						<cells>
							<ObjectIdentifier title="{Users>ID}" />
							<ObjectStatus
								text="{path:'Users>CovidHealthLevel', formatter:'.determineStatusTextByLevel'}"
								state="{path:'Users>CovidHealthLevel', formatter:'.determineStatusStateByLevel'}"
							/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
	</f:DynamicPage>
</mvc:View>